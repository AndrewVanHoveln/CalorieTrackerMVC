@model List<Calorie_Tracking_App.Models.Food>
@{
    ViewData["Title"] = "Tracker";
    double totalCalories = 0;
    double totalCarbs = 0;
    double totalProtien = 0;
    double totalFats = 0;
    DateTime? date = ViewData["Date"] as DateTime?;
}
<div style="display:flex; align-items:center; gap:10px;">
    <a asp-action="Index" asp-route-Date="@date?.AddDays(-1).ToShortDateString()">
        <i class="fa-solid fa-arrow-left fa-2x" asp-action="Index"></i>
    </a>
    
    <h2 id="date">Entries for @(date?.ToShortDateString())</h2>

    <a asp-action="Index" asp-route-Date="@date?.AddDays(1).ToShortDateString()">
        <i class="fa-solid fa-arrow-right fa-2x" asp-action="Index"></i>
    </a>
</div>

<table id="EntryTable">
    <thead>
        <tr>
            <th style="display:none;">Id</th>
            <th>Name</th>
            <th>Carbs (g)</th>
            <th>Fats (g)</th>
            <th>Protien (g)</th>
            <th>Calories (kcal)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0){
            foreach(var food in Model){
                totalCalories += food.Calories;
                totalCarbs += food.Carbs;
                totalProtien += food.Protien;
                totalFats += food.Fats;
                <tr>
                    <td>@food.Name</td>
                    <td>@food.Carbs</td>
                    <td>@food.Fats</td>
                    <td>@food.Protien</td>
                    <td>@food.Calories</td>
                    @* <td>@food.LoggedAt</td> *@
                    <td class= "bg-dark" style="border: none; padding-left: 5px; color: white;">
                        <i class="fa-solid fa-trash-can fa-2x" onclick="deleteFood(@food.Id)" style="cursor: pointer;"></i>
                    </td>
                </tr>
            }
        }
        <tr>
            <form method="post" asp-action="Add">
                <td><input type="text" name="Name" required /></td>
                <td><input type="number" name="Carbs" step="0.01" min="0" required/></td>
                <td><input type="number" name="Fats" step="0.01" min="0" required/></td>
                <td><input type="number" name="Protien" step="0.01" min="0" required/></td>
                <td><input type="number" name="Calories" min="0" step = "1" required/></td>
                <input type="hidden" name="LoggedAt" value="@(date?.ToString("yyyy-MM-dd"))" />
                <td class= "bg-dark" style="border: none; padding-left: 5px; color: white;">
                    <button type="submit" style="background:none; border:none; cursor:pointer; color:white; padding:0px; margin:0;">
                        <i class="fa-solid fa-plus fa-2x"></i>
                    </button>
                </td>
            </form>
        </tr>
        <tr>
            @{
                <td>Totals:</td>
                <td>@totalCarbs</td>
                <td>@totalFats</td>
                <td>@totalProtien</td>
                <td>@totalCalories</td>
            }
        </tr>
    </tbody>
</table>

@section Scripts{
    <script>
        function deleteFood(id){
            fetch(`/CalorieTracker/Delete/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                if(response.ok){
                    location.reload();
                } else{
                    alert('Failed to delete')
                }
            }).catch(Error => console.error(error));
        }
    </script>
}


